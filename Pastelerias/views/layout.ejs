<!DOCTYPE html>
<html>
    <head>
        <title>Prueba JavaScript</title>

        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <link rel="stylesheet" href="/styles/bootstrap.min.css">
        <script src="/bootstrap/js/jquery-3.1.1.min.js"></script>
        <script src="/bootstrap/js/bootstrap.min.js"></script>
    </head>

    <body>
        <div class="container">

            <!-- Static navbar -->
            <br>
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">Patelerias</a>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="/home">Home</a></li>
                            <li class="dropdown">
                                <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Pasteleria <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="/agregarPasteleria">Crear Pasteleria</a></li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Pastel <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="/agregarPastel">Agregar un pastel</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div><!--/.nav-collapse -->
                </div><!--/.container-fluid -->
            </nav>

        </div> <!-- /container -->

        <div class="container">

            <div class="row row-offcanvas row-offcanvas-right">

                <div class="col-xs-12 col-sm-7">
                    <p class="pull-right visible-xs">
                        <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
                    </p>
                    <div class="row">
                        <%- body %>
                    </div><!--/row-->
                </div>

                <div class="col-xs-6 col-sm-5 sidebar-offcanvas" id="sidebar">
                    <div class="col-xs-8">
                        <div class="list-group">
                            <% for(var i=0; i<pastelerias.length; i++){ %>
                            <a href="/pasteles?idPasteleria=<%= pastelerias[i].idPasteleria%>" class="list-group-item <%= (pasteleriaActual == pastelerias[i].idPasteleria) ? 'active' :''%>"> <font size=4>Pasteleria <%= pastelerias[i].nombrePasteleria%> <span class="<%= (pasteleriaActual == pastelerias[i].idPasteleria) ? 'glyphicon glyphicon-triangle-left' :''%>"></span></font></a>
                            <% }%>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <% for(var i=0; i<pastelerias.length; i++){ %>
                        <div class="btn-group btn-group-lg" role="group">
                            <a href="/editarPasteleria?idPasteleria=<%= pastelerias[i].idPasteleria%>" data-toggle="tooltip" title="Editar Pasteleria" type="button" role="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span></a>
                            <a href="/Pasteleria/borrarPasteleria?idPasteleria=<%= pastelerias[i].idPasteleria%>" data-toggle="tooltip" title="Eliminar Pasteleria" type="button" role="button" class="btn btn-default"><span class="glyphicon glyphicon-remove"></span></a>
                        </div>
                        <% }%>
                    </div>

                </div><!--/.sidebar-offcanvas-->
            </div><!--/row-->
        </div>

    </body>
</html>
