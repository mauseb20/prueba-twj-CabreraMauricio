<div class="col-sm-12">
    <h1>EditarPastel</h1>
    <form class="form-horizontal" action="Pastel/editarPastel" method="post">
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-4 control-label">Nombre:</label>
            <div class="col-sm-8">
                <input type="hidden" name="idPastel" value="<%= pastel.idPastel%>">
                <input type="text" name="nombrePastel" class="form-control" placeholder="Nombre del Pastel" value="<%= pastel.nombrePastel%>">
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-4 control-label">Tiempo de elaboraci√≥n</label>
            <div class="col-sm-8">
                <input type="number" name="tmpElaboracion" class="form-control" placeholder="Tiempo que se demora en preparar" value="<%= pastel.tmpElaboracion%>">
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-4 control-label">Foto</label>
            <div class="col-sm-8">
                <input type="text" name="urlFoto" class="form-control" placeholder="Url de la foto de como se ve" value="<%= pastel.urlFoto%>">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-4 control-label">Pasteleria que lo prepara</label>
            <div class="col-sm-8">
                <select class="form-control" name="PasteleriaPrepara">
                    <option value=""></option>
                    <% for(var i=0; i<pastelerias.length; i++){ %>
                    <option value="<%= pastelerias[i].idPasteleria%>" <%= (pastel.PasteleriaPrepara == pastelerias[i].idPasteleria) ? 'selected' :''%>>Pasteleria <%= pastelerias[i].nombrePasteleria%></option>
                    <% } %>
                </select>
            </div>
        </div>
        <br>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-4">
                <div class="btn-group btn-group-justified" role="group" aria-label="...">
                    <div class="btn-group" role="group">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                    <div class="btn-group" role="group">
                        <a href="/pasteles?idPasteleria=<%= pastel.PasteleriaPrepara%>"><button type="button" class="btn btn-default">Cancelar</button></a>
                    </div>

                </div>
            </div>
        </div>
    </form>
</div>